<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbway.HomeActivity">
    <!--상단바 부분-->
    <View
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="24dp"
        android:background="#a3a3a3"/>
    <View
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="5dp"
        android:background="#fff"/>
    <!--첫번째 줄-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/home_today"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="#80ff1463"
            android:clickable="true"
            android:padding="16dp">
            <ImageView
                android:id="@+id/home_slidemenu"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/slidemenu"
                android:clickable="true"/>
            <TextView
                android:id="@+id/home_date"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/home_week"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_toRightOf="@id/home_date"
                android:layout_alignBaseline="@id/home_date"/>
            <ImageView
                android:id="@+id/home_today_add"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/write"
                android:clickable="true"/>
            <LinearLayout
                android:id="@+id/schedule_content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_date"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/ts_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:singleLine="true"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/ts_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fafafa"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="22sp"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/ts_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fafafa"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/ts_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fafafa"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:padding="2dp"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="5dp"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:background="#fff"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/home_weather1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#99d6d8"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true">
                <ImageView
                    android:id="@+id/image_weather"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:tint="#fff"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/location"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="#fff"/>
                    <TextView
                        android:id="@+id/home_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="검색중"
                        android:textColor="#fff"
                        android:gravity="left"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_weight="0"
                android:layout_height="5dp"
                android:background="#fff"/>
            <LinearLayout
                android:id="@+id/home_weather2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="#efefef"
                android:clickable="true">
                <!--온도-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/temp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="#333"/>
                    <TextView
                        android:id="@+id/home_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="#333"/>
                </LinearLayout>
                <!--바람-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/airflow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="#333"/>
                    <TextView
                        android:id="@+id/home_airflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="#333"/>
                </LinearLayout>
                <!--강수량-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/rainfall"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="#333"/>
                    <TextView
                        android:id="@+id/home_rainfall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="#333"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="5dp"
        android:background="#fff"/>
    <!--두번째 줄-->
    <LinearLayout
        android:id="@+id/home_memo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#87ceeb"
        android:layout_weight="1"
        android:padding="16dp"
        android:clickable="true">
        <TextView
            android:textColor="#fff"
            android:text="MEMO"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/memo_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBaseline="@id/memo_content"
                android:layout_toRightOf="@id/memo_content">
                <TextView
                    android:id="@+id/memo_location"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/memo_date"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="5dp"
        android:background="#fff"/>
    <!--세번째 줄-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/home_dday"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:gravity="center"
            android:background="#ffce56"
            android:clickable="true">
            <TextView
                android:id="@+id/home_ddayres"
                android:textColor="#80000000"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/home_ddaytxt"
                android:textColor="#80000000"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"/>
        </LinearLayout>
        <View
            android:layout_width="5dp"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:background="#fff"/>
        <LinearLayout
            android:id="@+id/home_news"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="#80ff0000"
            android:clickable="true">
            <RelativeLayout
                android:id="@+id/news_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
                <TextView
                    android:textColor="#fff"
                    android:text="NEWS"
                    android:textSize="18sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#fff"
                    android:text="+"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/home_news_list"
                android:dividerHeight="0px"
                android:divider="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="5dp"
        android:background="#fff"/>
    <!--네번째 줄-->
    <LinearLayout
        android:id="@+id/home_bookmark"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:background="#a491c5"
        android:clickable="true">
        <TextView
            android:textColor="#fff"
            android:text="BOOKMARK"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/home_bookmark_list"
            android:dividerHeight="0px"
            android:divider="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
