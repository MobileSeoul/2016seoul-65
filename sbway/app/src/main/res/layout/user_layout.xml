<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/add_user">
    
    <LinearLayout
        android:id="@+id/top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@color/etc"
        android:gravity="center_horizontal">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alert_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="20sp"/>
        
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입 정보를 입력해주세요."
            android:textColor="#000"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#333"
                android:gravity="center"
                android:textSize="15sp"
                android:text="아이디"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#333"
                android:gravity="center"
                android:textSize="15sp"
                android:text="이름"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#333"
                android:gravity="center"
                android:textSize="15sp"
                android:text="비밀번호\n찾기 질문"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#333"
                android:gravity="center"
                android:textSize="15sp"
                android:text="비밀번호\n찾기 답변"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#333"
                android:gravity="center"
                android:textSize="15sp"
                android:text="이메일"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="7.5"
            android:paddingRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/UserId"
                android:padding="7dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customedit" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/UserName"
                android:padding="7dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customedit"/>
            <Spinner
                android:id="@+id/pw_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawSelectorOnTop="true"
                android:textSize="16sp"
                android:textColor="#888"
                android:paddingLeft="5dp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customedit"></Spinner>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ff000000"
                android:id="@+id/pw_answer"
                android:padding="7dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customedit"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ff000000"
                android:id="@+id/UserMail"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customedit"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
