<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:background="#fff"
    tools:context="com.sbway.memo001.MemoActivity">

    <RelativeLayout
        android:id="@+id/textarea"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="뉴 스"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#80ff0000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"></View>
    </RelativeLayout>

    <ListView
        android:id="@+id/news_list"
        android:padding="16dp"
        android:divider="#ffffff"
        android:dividerHeight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textarea"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_above="@+id/bottombtnN" />

    <LinearLayout
        android:id="@+id/bottombtnN"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp">

        <ImageView
            android:id="@+id/mainbtnN"
            android:src="@drawable/mainbtn"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/scheduleN"
            android:src="@drawable/schedule"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/memoN"
            android:src="@drawable/memo"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ddayN"
            android:src="@drawable/dday"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/newsN"
            android:src="@drawable/news"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/bookmarkN"
            android:src="@drawable/bookmark"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />
    </LinearLayout>
</RelativeLayout>
