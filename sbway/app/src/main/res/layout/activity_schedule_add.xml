<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    tools:context="com.sbway.ScheduleAddActivity">

    <RelativeLayout
        android:id="@+id/s_relative"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <TextView
            android:text="일정 추가"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/delete_schedule"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/schedule_title"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/delete"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5px"
            android:background="#e888b8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"></View>
    </RelativeLayout>

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="7.98"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.3"
            android:text="제목"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"/>
        <EditText
            android:id="@+id/title_9"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.7"
            android:hint="제목을 입력하세요."
            android:background="#00000000"
            android:textSize="18sp"
            android:gravity="center_vertical"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/dbtn1_9"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#999"
                android:layout_weight="0"/>
            <Button
                android:id="@+id/dbtn2_9"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.3"
            android:text="장소"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"/>
        <EditText
            android:id="@+id/location_9"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.7"
            android:hint="장소 또는 경로를 설정하세요.."
            android:background="#00000000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.3"
            android:text="설명"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"/>
        <EditText
            android:id="@+id/memo_9"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.7"
            android:hint="설명을 입력하세요."
            android:background="#00000000"
            android:gravity="center_vertical"
            android:textSize="18sp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.3"
            android:text="알람"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/alarm_9"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.7"
            android:text="알람을 설정하세요."
            android:textSize="18sp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="alarm_alert"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.3"
            android:text="반복"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/replay_9"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.7"
            android:text="반복을 설정하세요."
            android:textSize="18sp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="replay_alert"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_9"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:text="등록하기"
        android:background="#90ec6Ca0"/>
</LinearLayout>
