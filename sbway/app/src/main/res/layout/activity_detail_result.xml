<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="29dp"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/detail_title1"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/detail_title2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" → "
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detail_title3"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detailresult_shape"
        android:padding="16dp">
        <TextView
            android:id="@+id/detail_time0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="약 "/>
        <TextView
            android:id="@+id/detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ee6666"
            android:layout_toRightOf="@id/detail_time0"/>
        <TextView
            android:id="@+id/detail_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="분"
            android:layout_toRightOf="@id/detail_time"/>
        <TextView
            android:id="@+id/detail_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="18sp"
            android:textColor="#838383"
            android:layout_toRightOf="@id/detail_time2"
            android:layout_alignBaseline="@id/detail_time2"/>

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#fff">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:src="@drawable/path_start"/>
        <TextView
            android:id="@+id/start_loc"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:textSize="19sp"
            android:lineSpacingMultiplier="2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd" />
    <ListView
        android:id="@+id/detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:divider="#ddd"
        android:dividerHeight="1dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#fff">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:src="@drawable/path_end"/>
        <TextView
            android:id="@+id/end_loc"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:textSize="19sp"
            android:lineSpacingMultiplier="2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd" />
</LinearLayout>
